    <style>
        /* ðŸŽ¨ Paleta azul oscuro */
        :root {
            --azul-oscuro-1: #041e42;
            --azul-oscuro-2: #0a2647;
            --azul-oscuro-3: #144272;
            --azul-resaltado: #205295;
            --texto-claro: #e6f1ff;
        }

        body {
            background: var(--azul-oscuro-1);
            color: var(--texto-claro);
            font-family: 'Segoe UI', sans-serif;
        }

        /* ðŸ§­ Sidebar */
        .sidebar {
            width: 250px;
            background: linear-gradient(180deg, var(--azul-oscuro-2), var(--azul-oscuro-3));
            min-height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            padding-top: 60px; /* espacio para el navbar */
            box-shadow: 2px 0 5px rgba(0, 0, 0, 0.3);
        }

            .sidebar .nav-link {
                color: #bcd4f6;
                padding: 10px 20px;
                border-radius: 5px;
                transition: all 0.2s ease;
            }

                .sidebar .nav-link:hover {
                    background: var(--azul-resaltado);
                    color: #fff;
                }

            .sidebar .submenu .nav-link {
                font-size: 0.95rem;
                padding-left: 40px;
            }

        /* ðŸŒ™ Contenido principal */
        .content {
            margin-left: 250px;
            background: var(--azul-oscuro-1);
