@model IEnumerable<Facturacion_MVC.Models.TblcategoriaProd>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>

    h2 {
        margin-top: 20px;
        margin-bottom: 20px;
    }

    .btn {
        margin-right: 5px;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

    th, td {
        padding: 12px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    th {
        background-color: #f2f2f2;
    }

    tr:hover {
        background-color: #f5f5f5;
    }
</style>

<h2>Categorias</h2>

<a href="~/TBLcategoria/Nuevo" class="btn btn-primary">  +Agregar Categoria</a>

<table class="table table-hover">
    <tr>
        <th>IdProducto</th>
        <th>Descripción</th>
        <th>Acciones</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.IdCategoria</td>
            <td>@item.StrDescripcion</td>
            <td><a href="#" class="btn btn-info">Editar</a><a href="#" class="btn btn-danger">Borrar</a></td>
            <td>
        </tr>
    }
</table>