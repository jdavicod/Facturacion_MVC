<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Facturacion_MVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Facturacion_MVC.styles.css" asp-append-version="true" />

    <style>
        :root {
            --blue-dark-1: #052f5f;
            --blue-dark-2: #0d3b66;
            --blue-accent: #1f6f8b;
        }

        body { margin: 0; }

        .custom-navbar {
            background: linear-gradient(90deg, var(--blue-dark-1), var(--blue-dark-2));
            color: #e6f4ff;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

        .custom-navbar .nav-link {
            color: #cfe8ff;
            transition: color 0.2s ease-in-out;
        }

        .custom-navbar .nav-link:hover {
            background-color: rgba(255, 255, 255, 0.1);
        }

        .app-wrapper {
            display: flex;
            min-height: calc(100vh - 56px);
        }

        .sidebar {
            width: 250px;
            background: linear-gradient(180deg, var(--blue-dark-1), var(--blue-dark-2));
            color: #e6f4ff;
            padding-top: 1rem;
            box-shadow: 2px 0 8px rgba(0, 0, 0, 0.3);
        }

        .sidebar .section-title {
            font-weight: 600;
            color: var(--blue-accent);
            padding: .6rem 1rem;
            font-size: .85rem;
            text-transform: uppercase;
            letter-spacing: .04em;
        }

        .sidebar .nav-link {
            color: #e6f4ff;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 6px;
            margin: 0.4rem 0;
            text-align: center;
        }

        .sidebar .nav-link:hover {
            background-color: rgba(255, 255, 255, 0.2);
        }

        .submenu .nav-link {
            background: none;
            color: #cfe8ff;
            text-align: left;
            padding-left: 2rem;
            font-size: .95rem;
        }

        .content {
            flex: 1;
            background: #0b1220;
            color: #e6eef6;
            padding: 1rem;
        }

        footer.footer {
            background: #0f2233;
            color: #d4e6ff;
            text-align: center;
            padding: 0.2rem 0; /* Reduce el espacio interno */
            height: 70px; /* Reduce la altura */
            font-size: 0.8rem; /* Opcional: Reduce el tamaño del texto */
        }


        .table {
            color: antiquewhite;
            text-align: center;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm custom-navbar box-shadow">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Facturacion_MVC</a>

                <div class="collapse navbar-collapse justify-content-end">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item"><a class="nav-link" asp-controller="Principal" asp-action="Index">Inicio</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Principal" asp-action="Acerca">Acerca</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Principal" asp-action="Ayuda">Ayuda</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Principal" asp-action="Contacto">Contacto</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="app-wrapper container-fluid px-0">
        <div class="sidebar">
            <div class="section-title">Navegación</div>
            <ul class="nav flex-column mt-2">

                <!-- 🔹 TABLAS -->
                <li class="nav-item">
                    <a class="nav-link" data-bs-toggle="collapse" href="#submenuTablas" role="button" aria-expanded="false" aria-controls="submenuTablas">
                        TABLAS
                    </a>
                    <div class="collapse submenu" id="submenuTablas">
                        <ul class="nav flex-column mt-1">
                            <li class="nav-item"><a class="nav-link" asp-controller="Clientes" asp-action="Index">Clientes</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="TBLProductos" asp-action="Index">Productos</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="TBLCategoria" asp-action="Index">Categorías</a></li>
                        </ul>
                    </div>
                </li>

                <!-- 🔹 FACTURAS -->
                <li class="nav-item">
                    <a class="nav-link" data-bs-toggle="collapse" href="#submenuFacturas" role="button" aria-expanded="false" aria-controls="submenuFacturas">
                        FACTURAS
                    </a>
                    <div class="collapse submenu" id="submenuFacturas">
                        <ul class="nav flex-column mt-1">
                            <li class="nav-item"><a class="nav-link" asp-controller="Facturas" asp-action="Index">Facturas</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Seguridad" asp-action="Index">Seguridad</a></li>
                        </ul>
                    </div>
                </li>

                <!-- 🔹 SEGURIDAD -->
                <li class="nav-item">
                    <a class="nav-link" data-bs-toggle="collapse" href="#submenuSeguridad" role="button" aria-expanded="false" aria-controls="submenuSeguridad">
                        SEGURIDAD
                    </a>
                    <div class="collapse submenu" id="submenuSeguridad">
                        <ul class="nav flex-column mt-1">
                            <li class="nav-item"><a class="nav-link" asp-controller="Empleados" asp-action="Index">Empleados</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Roles" asp-action="Index">Roles</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Seguridad" asp-action="Index">Seguridad</a></li>
                        </ul>
                    </div>
                </li>
            </ul>
        </div>

        <main class="content">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted">
        <div class="container">&copy; 2025 - Facturacion_MVC</div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
