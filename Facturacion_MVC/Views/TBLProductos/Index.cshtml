
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>    
    
    h2 {
        margin-top: 20px;
        margin-bottom: 20px;
    }
    .btn {
        margin-right: 5px;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
        /* border: 2px solid #1f6f8b; */
    }
    th, td {
        padding: 12px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }
    th {
        background-color: #f2f2f2;
    }
    tr:hover {
        background-color: #f5f5f5;
    }

    .scroll-table {
        max-height: 900px;
        overflow-y: auto;
        /* border: 2px solid #1f6f8b; */
        border-radius: 5px;
       
    }

    .scroll-table table {
        margin: 0;
    }
</style>

<h2>Productos</h2>

<a href="#" class="btn btn-primary"> +Agregar Producto</a>
<div class="scroll-table">   
    <table class="table table-hover">
        <tr>
            <th>Id</th>
            <th>Producto</th>
            <th>Categoria</th>
            <th>Precio</th>
            <th>Stock</th>
            <th>Acciones</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.IdProducto</td>
                <td>@item.StrNombre</td>
                <td>@item.IdCategoria</td>
                <td>@item.NumPrecioVenta</td>
                <td>@item.NumStock</td>
                <td><a href="#" class="btn btn-info">Editar</a><a href="#" class="btn btn-danger">Borrar</a></td>
            </tr>
        }

    </table>
</div>