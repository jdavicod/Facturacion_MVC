@model IEnumerable<Facturacion_MVC.Models.Tblproducto>

@{
    ViewData["Title"] = "Producto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="fw-bold text-white mb-4">Productos</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="modal fade" id="successModal" tabindex="-1" aria-labelledby="successModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content border-primary shadow-lg" style="border-width: 2px;">
                    <div class="modal-header" style="background-color:#0d6efd; color:white;">
                        <h5 class="modal-title" id="successModalLabel">
                            <i class="bi bi-check-circle-fill me-2"></i> Operación exitosa
                        </h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                    </div>
                    <div class="modal-body" style="background-color:#f0f7ff;">
                        <div class="d-flex align-items-center">
                            <i class="bi bi-check2-square text-primary fs-3 me-2"></i>
                            <span class="text-dark fw-semibold">@TempData["SuccessMessage"]</span>
                        </div>
                    </div>
                    <div class="modal-footer" style="background-color:#e6f0ff;">
                        <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Cerrar</button>
                    </div>
                </div>
            </div>
        </div>

        <script>
            document.addEventListener("DOMContentLoaded", function () {
                var successModal = new bootstrap.Modal(document.getElementById('successModal'));
                successModal.show();
            });
        </script>
    }

    <a asp-action="Nuevo" class="btn btn-primary mb-3">+ Agregar Producto</a>

    <div style="max-height: 400px; overflow-y: auto;">
        <table class="table table-dark table-hover align-middle shadow rounded">
            <thead class="table-light text-center">
                <tr>
                    <th>Id</th>
                    <th>Producto</th>
                    <th>Codigo</th>
                    <th>Categoria</th>
                    <th>Precio</th>
                    <th>Stock</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody class="text-center">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.IdProducto</td>
                        <td>@item.StrNombre</td>
                        <td>@item.StrCodigo</td>
                        <td>@item.IdCategoria</td>
                        <td>@item.NumPrecioVenta</td>
                        <td>@item.NumStock</td>
                        <td>
                            <a href="~/TblProductos/Editar/@item.IdProducto" class="btn btn-info">Editar</a>
                            <a href="~/TblProductos/Borrar/@item.IdProducto" class="btn btn-danger">Borrar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    body {
        background-color: #0d1117;
        color: #f5f5f5;
    }

    .table {
        border-radius: 10px;
        overflow: hidden;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
    }

    .btn-info {
        background-color: #00bcd4;
        border: none;
    }

    .btn-danger {
        background-color: #dc3545;
        border: none;
    }

    .btn:hover {
        opacity: 0.9;
        transform: scale(1.02);
        transition: 0.2s;
    }
</style>


